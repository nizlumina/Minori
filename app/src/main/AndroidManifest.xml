<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.nizlumina.minori"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".android.internal.Minori"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MinoriDark">
        <receiver
            android:name=".android.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".android.service.ScanService"
            android:exported="false" />

        <receiver
            android:name=".android.receiver.ScanReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".android.receiver.DownloadReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".android.service.DownloadService"
            android:exported="false" />
        <activity
            android:name=".android.activity.DrawerActivity"
            android:label="@string/title_activity_gallery">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.activity.GalleryActivity"
            android:label="@string/title_activity_gallery">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".android.activity.SearchActivity"
            android:label="@string/title_activity_gallery" />
    </application>

</manifest>
