<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.nizlumina.minori"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".MinoriApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MinoriDark.TranslucentStatusBar">
        <receiver
            android:name=".model.alarm.AlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".service.NyaaScanService$ServiceReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".service.DownloadService$ServiceReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".service.NyaaScanService"
            android:exported="false" />
        <service
            android:name=".service.DownloadService"
            android:exported="false" />
        <service
            android:name=".service.TorrentService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ui.activity.GalleryActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SeasonBrowserActivity"
            android:parentActivityName=".ui.activity.GalleryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.GalleryActivity" />
        </activity>
        <activity
            android:name=".ui.activity.DetailActivity"
            android:parentActivityName=".ui.activity.SeasonBrowserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.SeasonBrowserActivity" />
        </activity>
        <activity
            android:name=".ui.activity.TorrentActivity"
            android:parentActivityName=".ui.activity.SeasonBrowserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.SeasonBrowserActivity" />
        </activity>
        <activity
            android:name=".ui.activity.BatchModeActivity"
            android:label="@string/title_activity_batch"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
    </application>

</manifest>
