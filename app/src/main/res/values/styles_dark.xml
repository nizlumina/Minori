<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MinoriDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/rbc_green_lime</item>
    </style>

    <style name="LayoutBackgroundPrimary" parent="MinoriDark">
        <item name="android:background">@color/rbc_bg_light_grey</item>
    </style>

    <style name="LayoutBackgroundSecondary" parent="MinoriDark">
        <item name="android:background">@color/rbc_bg_grey_shade</item>
    </style>

    <style name="TextStyle" parent="MinoriDark">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextColorBase" parent="TextStyle">
        <item name="android:textColor">@color/rb_white</item>
    </style>

    <style name="TextColorPrimary" parent="TextStyle">
        <item name="android:textColor">@color/rbc_text_blue</item>
    </style>

    <style name="TextColorSecondary" parent="TextStyle">
        <item name="android:textColor">@color/rbc_text_red</item>
    </style>

    <style name="TextColorTertiaryBright" parent="TextStyle">
        <item name="android:textColor">@color/rbc_text_yellow</item>
    </style>

    <style name="TextColorTertiaryLight" parent="TextStyle">
        <item name="android:textColor">@color/rbc_text_orange</item>
    </style>

    <style name="TextColorTertiaryMedium" parent="TextStyle">
        <item name="android:textColor">@color/rbc_text_green</item>
    </style>

    <style name="TextColorTertiaryDark" parent="TextStyle">
        <item name="android:textColor">@color/rbc_text_purple</item>
    </style>
</resources>
