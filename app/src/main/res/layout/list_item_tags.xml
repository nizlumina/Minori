<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gallery_date"
        style="@style/TextColorTertiaryLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="1:23AM Thu, 31 Dec"
        android:textSize="@dimen/abc_text_size_subhead_material" />

    <TextView
        android:id="@+id/gallery_trust"
        style="@style/TextColorTertiaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery_date"
        android:text="Trusted"
        android:textSize="@dimen/abc_text_size_subhead_material" />

    <TextView
        android:id="@+id/gallery_res"
        style="@style/TextColorTertiaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery_date"
        android:layout_toRightOf="@id/gallery_trust"
        android:text="720p"
        android:textSize="@dimen/abc_text_size_subhead_material" />

    <TextView
        android:id="@+id/gallery_quality"
        style="@style/TextColorTertiaryBright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery_date"
        android:layout_toRightOf="@id/gallery_res"
        android:text="BD"
        android:textSize="@dimen/abc_text_size_subhead_material" />
</RelativeLayout>