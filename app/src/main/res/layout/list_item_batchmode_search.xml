<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/libs_search_group"
        style="@style/TextColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_900"
        android:paddingBottom="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        tools:text="Test Group" />

    <TextView
        android:id="@+id/libs_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_900"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        tools:text="Lorem ipsum del amet si Lorem ipsum mon avacci si" />

    <!-- Hidden until parent item is touched-->
    <RelativeLayout
        android:id="@+id/libs_rl_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_900"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:id="@+id/libs_ll_episode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/roundrect_inline_grey"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/libs_tv_ep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundrect_small_white"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="EP"
                android:textColor="@color/grey_900"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/libs_et_episode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="-8dp"
                android:background="@drawable/circle_inline_white"
                android:gravity="center"
                android:inputType="numberSigned"
                android:textSize="16sp"
                tools:text="888" />


            <Button
                android:id="@+id/libs_btn_firstep"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRST" />

            <Button
                android:id="@+id/libs_btn_currep"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT" />

            <Button
                android:id="@+id/libs_btn_nextep"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT" />

        </LinearLayout>


        <Button
            android:id="@+id/libs_btn_1080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/libs_ll_episode"
            android:layout_marginRight="4dp"
            android:text="1080" />

        <Button
            android:id="@+id/libs_btn_720"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/libs_btn_1080"
            android:layout_toLeftOf="@id/libs_btn_1080"
            android:text="720" />

        <Button
            android:id="@+id/libs_btn_480"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/libs_btn_1080"
            android:layout_toLeftOf="@id/libs_btn_720"

            android:text="480" />

        <!-- Visibility toggled if resolution options not available-->
        <Button
            android:id="@+id/libs_btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/libs_ll_episode"
            android:layout_marginRight="8dp"
            android:text="Default Res"
            android:visibility="gone" />

    </RelativeLayout>

    <include
        layout="@layout/view_shadow_top"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
</LinearLayout>