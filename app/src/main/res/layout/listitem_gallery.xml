<android.support.v7.widget.CardView
    style="@style/CardView.Dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:contentPadding="8dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cd_poster_description"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_star_white_48dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="78dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="?attr/textColorBase"
            android:textSize="16sp"
            tools:text="A Good Guy" />
        <!--tools:text="Watashi Wakaranai Desu Dekinai ga Warau Don Don Sasquatch Oboeteru"-->


        <TextView
            android:id="@+id/item_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textColor="?attr/textColorTertiary"
            tools:text="Next 9" />

        <TextView
            android:id="@+id/item_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_episode"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="?attr/textColorSenary"
            tools:text="Release Day" />

        <TextView
            android:id="@+id/item_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_episode"
            android:singleLine="true"
            android:textColor="?attr/textColorSecondary"
            tools:text="Commie" />


        <TextView
            android:id="@+id/item_trust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_group"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="?attr/textColorPrimary"
            tools:text="Remakes" />

        <TextView
            android:id="@+id/item_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_group"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/item_trust"
            android:singleLine="true"
            android:textColor="?attr/textColorQuinary"
            tools:text="720p" />
    </RelativeLayout>

</android.support.v7.widget.CardView>