<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LayoutBackgroundPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <include
        layout="@layout/list_item_singleview"
        android:layout_width="@dimen/gallery_image_width"
        android:layout_height="@dimen/gallery_image_height"
        android:layout_marginLeft="-4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/gallery_episode"
            style="@style/TextColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Episode 8"

            />

        <TextView
            android:id="@+id/gallery_title"
            style="@style/TextColorBase"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="You are The Mobile Kyojins"
            android:textSize="@dimen/abc_text_size_headline_material" />

        <TextView
            android:id="@+id/gallery_group"
            style="@style/TextColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submarines"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <include layout="@layout/list_item_tags" />
    </LinearLayout>


</LinearLayout>