<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:endColor="@color/shadow_73"
                android:startColor="@color/shadow_13"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/accent_color" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
</layer-list>